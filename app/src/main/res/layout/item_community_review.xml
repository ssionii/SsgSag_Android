<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
                name="reviewMain"
                type="com.icoo.ssgsag_android.data.model.community.ReviewMain" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/border_eeeeee_8"
        android:layout_marginBottom="12dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="3dp"
                    app:cardBackgroundColor="@color/grey_4"
                    app:cardElevation="0dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/grey_1"
                        android:letterSpacing="-0.02"
                        android:gravity="center_horizontal"
                        tools:text="연합동아리"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="2dp"
                        android:text="@{reviewMain.category}"/>
            </androidx.cardview.widget.CardView>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/grey_2"
                    android:letterSpacing="-0.02"
                    tools:text="IT 연합동아리 SOPT "
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:layout_marginLeft="4dp"
                    android:text="@{reviewMain.name}"/>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black_1"
                android:letterSpacing="-0.01"
                tools:text="“IT 업계 가고싶으면 꼭 해라”"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:layout_marginTop="10dp"
                android:text="@{reviewMain.title}"
                />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">
            <RatingBar
                    android:id="@+id/item_review_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/reviewRatingBar"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="@{reviewMain.score}"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:textColor="@color/grey_2"
                    android:letterSpacing="-0.03"
                    tools:text="평점 3.9"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:layout_marginLeft="9dp"
                    reviewGrade="@{reviewMain.score}"/>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black_2"
                android:letterSpacing="-0.02"
                android:layout_marginTop="10dp"
                android:maxLines="4"
                android:ellipsize="end"
                tools:text="개발, 디자인, 기획 파트로 나누어져 있어서 협업 경험하는데 큰 도움 됨. 특히 방학에 앱잼이라는 3주짜리 해커톤을 하는데 너무 맘에 들었음 ㅎㅎ IT쪽에 충분히 관심있고 개발 욕심있다면 짱 추천 "
                android:fontFamily="@font/noto_sans_kr_regular"
                android:text="@{reviewMain.description}"
                />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/grey_2"
                    android:textSize="10sp"
                    tools:text="작성자"
                    android:text="@{reviewMain.userName}"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/grey_2"
                    android:textSize="10sp"
                    android:text=" | " />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textColor="@color/grey_2"
                    android:textSize="10sp"
                    tools:text="2019년 활동"
                    android:text="@{reviewMain.actDuration}"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>