<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tool="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="vm"
                type="com.icoo.ssgsag_android.ui.main.allPosters.category.AllCategoryViewModel" />
    </data>

    <LinearLayout
            android:id="@+id/frag_all_category_ll_top_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/main_navi_height">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="12dp">

            <ImageView
                    android:id="@+id/frag_all_category_iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back"/>
            <TextView
                    android:id="@+id/frag_all_category_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:layout_centerInParent="true"
                    categoryTitle="@{vm.category}"
                    tool:text="공모전"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="13dp">
            <androidx.cardview.widget.CardView
                    categoryVisibility="@{vm.category}"
                    android:id="@+id/frag_all_category_cv_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    categoryFieldBackground="@{vm.field}"
                    app:cardElevation="0dp">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="12dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#777777"
                            android:textSize="12sp"
                            android:fontFamily="@font/noto_sans_kr_medium"
                            tool:text="분야: 전체"
                            categoryField="@{vm.field}"
                            isUnivClub="@{vm.isUnivClub}"
                            android:layout_centerInParent="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/frag_all_category_cv_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:cardElevation="0dp">
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/frag_all_category_iv_v"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/v_check"
                            android:layout_centerVertical="true"/>

                    <TextView
                            android:id="@+id/frag_all_category_tv_sort"
                            categorySortType="@{vm.sortType}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="18dp"
                            android:layout_marginLeft="2dp"
                            android:layout_toRightOf="@+id/frag_all_category_iv_v"
                            android:fontFamily="@font/noto_sans_kr_medium"
                            android:textColor="#656ef0"
                            android:textSize="12sp"
                            tool:text="인기순" />
                </RelativeLayout>


            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frag_all_category_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                addAll="@{vm.posters}"/>

        <RelativeLayout
                android:visibility="gone"
                android:id="@+id/frag_all_category_rl_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                <ImageView
                        android:layout_width="186dp"
                        android:layout_height="186dp"
                        android:src="@drawable/img_empty"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="표시할 활동 정보가 없습니다."
                        android:textColor="#979797"
                        android:textSize="14sp"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:layout_gravity="center_horizontal"/>
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>
</layout>