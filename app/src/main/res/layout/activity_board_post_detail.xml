<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/act_board_post_detail_cl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/act_board_post_detail_cl_back"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="13dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:textColor="@color/black_2"
                android:text="@string/counsel_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/act_board_post_detail_cl_search"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="12dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_category_etc"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/act_board_post_detail_cl_toolbar"
            app:layout_constraintBottom_toTopOf="@+id/act_board_post_detail_cl_write_comment"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/grey_4">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:id="@+id/act_board_post_detail_ll_post_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="24dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="@color/grey_1"
                        android:letterSpacing="-0.02"
                        android:gravity="center_horizontal"
                        tools:text="공모전/대외활동"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:layout_marginTop="17dp" />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="@color/black_1"
                        android:letterSpacing="-0.01"
                        tools:text="게시판 제목 / 글자 수 20자 제한"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:layout_marginTop="10dp"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical">
                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/profile"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/black_1"
                            android:letterSpacing="-0.02"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            tools:text="파이오오"
                            android:layout_marginLeft="8dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/black_1"
                            android:letterSpacing="-0.02"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            tools:text=" · " />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/black_1"
                            android:letterSpacing="-0.02"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            tools:text="3일 전" />
                </LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/black_1"
                        android:letterSpacing="-0.02"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        tools:text="글 내용"
                        />
            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toBottomOf="@id/act_board_post_detail_ll_post_container"
                    app:layout_constraintStart_toStartOf="parent"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="24dp"
                    android:gravity="center_vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/grey_2"
                        android:letterSpacing="-0.02"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        tools:text="댓글 3개" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/grey_2"
                        android:letterSpacing="-0.02"
                        tools:text="조회수 32회"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:layout_marginHorizontal="8dp"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:layout_width="104dp"
                        android:layout_height="36dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/border_eeeeee_4">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_like_outlined"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/black_2"
                            android:letterSpacing="-0.02"
                            android:gravity="center_horizontal"
                            tools:text="공감 31"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            android:layout_marginLeft="4dp" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/grey_4"/>
            <TextView
                    android:visibility="gone"
                    android:id="@+id/act_board_post_detail_tv_no_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/grey_2"
                    android:letterSpacing="-0.02"
                    android:text="등록된 댓글이 없습니다."
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/act_board_post_detail_rv_comment"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/act_board_post_detail_cl_write_comment"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white">
        <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="14dp"
                android:textColor="@color/grey_2"
                android:letterSpacing="-0.01"
                android:hint="댓글을 입력해주세요"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/act_board_post_detail_iv_write_comment"/>
        <ImageView
                android:id="@+id/act_board_post_detail_iv_write_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bt_comment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>