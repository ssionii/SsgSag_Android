<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    <include
            android:id="@+id/act_my_board_toolbar"
            layout="@layout/toolbar_back"
        />
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_4"
            app:layout_constraintBottom_toBottomOf="@+id/act_my_board_tl"/>
    <com.google.android.material.tabs.TabLayout
            android:id="@+id/act_my_board_tl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabIndicatorColor="@color/ssgsag"
            app:tabIndicatorHeight="2dp"
            app:tabSelectedTextColor="@color/ssgsag"
            app:tabTextColor="@color/grey_2"
            app:layout_constraintTop_toBottomOf="@id/act_my_board_toolbar"/>
       <androidx.viewpager.widget.ViewPager
            android:id="@+id/act_my_board_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/act_my_board_tl"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>