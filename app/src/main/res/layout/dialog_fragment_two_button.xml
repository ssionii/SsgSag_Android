<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="#80000000"
            android:paddingHorizontal="40dp">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_centerVertical="true"
                app:cardCornerRadius="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:id="@+id/dialog_frag_two_button_ll_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        android:gravity="center_horizontal">
                    <TextView
                            android:id="@+id/dialog_frag_two_button_tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="58dp"
                            android:textColor="@color/black_1"
                            android:visibility="gone"
                            android:fontFamily="@font/noto_sans_kr_medium"
                            android:textSize="14sp"/>
                    <TextView
                            android:id="@+id/dialog_frag_two_button_tv_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/review_edit_dialog_text"
                            android:textColor="@color/black_2"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textAlignment="center"
                            android:textSize="14dp"
                            android:layout_marginTop="52dp"
                            android:layout_marginBottom="40dp"/>


                </LinearLayout>
                <View
                        android:id="@+id/dialog_frag_two_button_v"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dialog_frag_two_button_ll_text"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/dialog_frag_two_button_v">

                    <TextView
                            android:id="@+id/dialog_frag_two_button_tv_left"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#aaaaaa"
                            android:textSize="16dp"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:layout_weight="1"
                            android:gravity="center"/>

                    <TextView
                            android:id="@+id/dialog_frag_two_button_tv_right"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#656ef0"
                            android:textSize="16dp"
                            android:fontFamily="@font/noto_sans_kr_medium"
                            android:layout_weight="1"
                            android:gravity="center"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</layout>