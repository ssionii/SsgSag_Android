<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="vm"
                type="com.icoo.ssgsag_android.ui.main.community.review.reviewDetail.ReviewDetailViewModel" />
    </data>

<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/review_blog" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textSize="12sp"
                        android:textColor="#444444"
                        android:layout_marginLeft="4dp"
                        android:text="슥삭 후기"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textSize="10sp"
                        android:textColor="@color/ssgsag"
                        android:layout_marginLeft="2dp"
                        intToString="@{vm.ssgSagMainReviews.size()}"
                        tools:text="33"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frag_review_detail_review_rv_ssgsag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                reviewsVisibility="@{vm.ssgSagMainReviews.size()}"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frag_review_detail_review_cl_more_ssgsag"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                reviewMoreVisibility="@{vm.ssgSagMainReviews.size()}">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="더보기"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:textSize="12sp"
                        android:textColor="@color/ssgsag"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/small_3"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:id="@+id/frag_review_detail_review_ll_ssgsag_empty"
                reviewsEmptyVisibility="@{vm.ssgSagMainReviews.size()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
            <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="46dp"
                    android:src="@drawable/img_empty"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="후기가 없어요ㅠㅠ\n20학번 새내기들을 위해 후기를 작성해 주세요 👇"
                    android:textAlignment="center"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textSize="10sp"
                    android:textColor="#777777"/>
            <androidx.cardview.widget.CardView
                    android:id="@+id/frag_review_detail_review_cv_submit_ssgsag_review"
                    android:layout_width="116dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="59dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/ssgsag">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="후기 작성하기"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#eeeeee" />
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/review_blog" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textSize="12sp"
                        android:textColor="#444444"
                        android:layout_marginLeft="4dp"
                        android:text="블로그 후기"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textSize="10sp"
                        android:textColor="@color/ssgsag"
                        android:layout_marginLeft="2dp"
                        tools:text="33"
                        intToString="@{vm.blogMainReviews.size()}"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/frag_review_detail_review_rv_blog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                replaceAll="@{vm.blogMainReviews}"
                reviewsVisibility="@{vm.blogMainReviews.size()}"
                android:overScrollMode="never" />
        <androidx.constraintlayout.widget.ConstraintLayout
                android:visibility="gone"
                android:id="@+id/frag_review_detail_review_cl_more_blog"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                reviewMoreVisibility="@{vm.blogMainReviews.size()}">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="더보기"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:textSize="12sp"
                        android:textColor="@color/ssgsag"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/small_3"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
                android:id="@+id/frag_review_detail_review_ll_blog_empty"
                reviewsEmptyVisibility="@{vm.blogMainReviews.size()}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="59dp"
                android:gravity="center_horizontal">
            <ImageView
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="46dp"
                    android:src="@drawable/img_empty"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="블로그 후기가 없어요😭\n20학번 새내기들을 위해 동아리 후기를 작성해주세요!"
                    android:textAlignment="center"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:textSize="10sp"
                    android:textColor="#777777"/>
            <androidx.cardview.widget.CardView
                    android:id="@+id/frag_review_detail_review_cv_submit_blog_review"
                    android:layout_width="151dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="@color/ssgsag">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="블로그 후기 등록하기"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
</layout>