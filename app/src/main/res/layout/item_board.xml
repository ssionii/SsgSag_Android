<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="postDetail"
                type="com.icoo.ssgsag_android.data.model.community.board.BoardPostDetail" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
    <LinearLayout
            android:id="@+id/item_board_ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="20dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
            <androidx.cardview.widget.CardView
                    cvVisibilityByInt="@{postDetail.isBest}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#14fe6d6d"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="3dp"
                    android:layout_marginRight="4dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginHorizontal="4dp"
                        android:text="BEST"
                        android:textSize="10dp"
                        android:textColor="#fe6d6d"
                        android:letterSpacing="-0.02" />
            </androidx.cardview.widget.CardView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:textColor="@color/grey_1"
                    android:letterSpacing="-0.02"
                    tools:text="공모전/대외활동"
                    android:text="@{postDetail.category}"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:textColor="@color/black_1"
                        android:letterSpacing="-0.01"
                        tools:text="센치해 불러본다 친구들"
                        android:layout_marginTop="6dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@{postDetail.title}"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/grey_1"
                        android:letterSpacing="-0.02"
                        tools:text="나 지금 센치해 천장만 바라봐 뚠뚠뚠뚠뚠뚠뚠"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:layout_marginTop="4dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@{postDetail.description}"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_view_count"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textColor="@color/grey_2"
                            android:letterSpacing="-0.02"
                            tools:text="30"
                            android:layout_marginLeft="2dp"
                            android:text="@{postDetail.viewCount}"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_comment"
                            android:layout_marginLeft="6dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textColor="@color/grey_2"
                            android:letterSpacing="-0.02"
                            tools:text="30"
                            android:layout_marginLeft="2dp"
                            android:text="@{postDetail.commentCount}"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:textColor="@color/grey_2"
                            android:letterSpacing="-0.02"
                            tools:text="1시간 전"
                            android:layout_marginLeft="8dp"
                            android:text="@{postDetail.time}"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                    android:id="@+id/item_board_cv_photo"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/grey_4"
                    cvVisibilityByString="@{postDetail.photoUrl}">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        glideCenterCrop="@{postDetail.photoUrl}"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_4"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/item_board_ll_container"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>