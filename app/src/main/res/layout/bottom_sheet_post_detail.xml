<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_top_39_radius">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="32dp">
            <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/bottom_sheet_post_detail_cv_edit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="#14656ef0"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="12dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/cornflower"
                        android:letterSpacing="-0.01"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:text="수정"
                        android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/bottom_sheet_post_detail_cv_delete"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="#14656ef0"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="12dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/cornflower"
                        android:letterSpacing="-0.01"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:text="삭제"
                        android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/bottom_sheet_post_detail_cv_report"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="#14656ef0"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="12dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/cornflower"
                        android:letterSpacing="-0.01"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:text="신고"
                        android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/bottom_sheet_post_detail_cv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="#f7f7f7"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="36dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/grey_1"
                        android:letterSpacing="-0.01"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:text="취소"
                        android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>